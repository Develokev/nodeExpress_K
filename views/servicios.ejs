<%- include('./templates/header.ejs') %>

<body>

    <main>
        <p>List of available services</p>
        <ul>
            <li>Console maintenance</li>
            <li>User support</li>
            <li>Bug fixing</li>
            <li>Chips</li>
            <li>Purchase advisory</li>
        </ul>

        <table>
            <thead>
                <tr>
                    <th>Services</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                <% if (services.length > 0) { %>
                    <% services.forEach(item => { %>
                        <tr>
                            <td><%= item.service %></td>
                            <td><%= item.description %></td>
                        </tr>
                    <% }) %>
                    <% } else { %>
                     <tr>
                        <td>No services to show, kiddo</td>
                     </tr>
                <% } %>
            </tbody>
        </table>
    </main>

</body>

